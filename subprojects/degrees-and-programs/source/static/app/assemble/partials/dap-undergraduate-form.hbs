<!-- partial:dap-undergraduate-form -->
<form id="js-dap-undergraduate-form" class="dap-undergraduate-form" action="">
  <div class="wavy-bg"></div>

  <legend class="show-for-sr">Search for Undergraduate Degrees and Programs</legend>
  <fieldset>

    <input type="hidden" name="type" value="undergraduate">

    <div id="js-dap-undergraduate-program-types" class="program-types">
      <div class="row">

        <!-- Degrees and Programs Checkboxes -->
        <div class="columns small-12">
          <h4 class="subsection-heading faux-h2 pb-0"><span class="bold text--red">Undergraduate</span> Degree
            and
            Program Finder
          </h4>
          <div class="line"></div>
        </div>
        <div class="columns small-12 medium-6">
          <h4 class="subsection-heading">Program Type:</h4>
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>Programs</span>
              </div>
            </label>

          </div>
        </div>
        <div class="columns small-12 medium-6">
          <h4 class="subsection-heading">Start Term(s):</h4>
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-major">
              <input id="dap-undergraduate-program-major" name="dap-undergraduate-program-major" type="checkbox"
                value="major,integrated/4+1,accelerated 3+2" />
              <div class="inner">
                {{svg "check"}}
                <span>Majors</span>
              </div>
            </label>
          </div>
        </div>
        <div class="columns small-12 medium-6">
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-minor">
              <input id="dap-undergraduate-program-minor" name="dap-undergraduate-program-minor" type="checkbox"
                value="minor" />
              <div class="inner">
                {{svg "check"}}
                <span>Minors</span>
              </div>
            </label>
          </div>
        </div>
        <div class="columns small-12 medium-6">
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-bridge">
              <input id="dap-undergraduate-program-bridge" name="dap-undergraduate-program-bridge" type="checkbox"
                value="bridge,integrated/4+1,accelerated 3+2" />
              <div class="inner">
                {{svg "check"}}
                <span>Accelerated &amp; Bridge Programs</span>
              </div>
            </label>
          </div>
        </div>

      </div>
    </div>

    <div id="js-dap-undergraduate-interests" class="dap-undergraduate-interests">

      <div class="row">
        <!-- I'm Interested In Checkboxes -->
        <div class="columns small-12 medium-6 clearfix">
          <h4 class="subsection-heading">Areas of Study:</h4>
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>Programs</span>
              </div>
            </label>

          </div>
        </div>
        <div class="columns small-12 medium-6 clearfix">
          <h4 class="subsection-heading">Campus:</h4>
          <div class="field-container">
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>All Undergraduate Programs</span>
              </div>
            </label>
            <label tabindex="0" class="program-type button" for="dap-undergraduate-program-all">
              <input id="dap-undergraduate-program-all" name="dap-undergraduate-program-all" type="checkbox"
                value="all" />
              <div class="inner">
                {{svg "check"}}

                <span>Programs</span>
              </div>
            </label>

          </div>
          <div class="program-toggle program-toggle__blurb">
            <div class="program-toggle__image">
              <img src="http://placekitten.com/200/300" alt="" />
            </div>
            <div class="program-toggle__text">
              <h4 class="subsection-heading">Undergraduate Degree and Program Finder</h4>
              <p>If you are looking for an undergraduate program, please use our Undergraduate Degree and Program
                Finder.
              </p>
            </div>
          </div>
        </div>



      </div>
    </div>

    <div id="js-dap-undergraduate-filter-types" class="filter-types">
      <div class="row">

        <!-- Filter by Schools and Colleges -->
        <div class="columns small-12 large-5">
          <div class="field-container custom-select-container">
            <label tabindex="0" for="dap-undergraduate-school" class="show-for-sr">Filter by Schools and
              Colleges</label>
            <select name="dap-undergraduate-school" id="dap-undergraduate-school">
              <option disabled="disabled" selected="selected" value="none">Filter by Schools and Colleges</option>
              <option value="all">All Schools and Colleges</option>
              {{#parseFixture 'dap-feature.json'}}
              {{#each schools}}
              <option value="{{id}}">{{{title}}}</option>
              {{/each}}
              {{/parseFixture}}
            </select>
          </div>
        </div>

        <!-- Or Separator -->
        <div class="columns small-12 large-2">
          <div class="or-separator">
            <span>Or</span>
          </div>
        </div>

        <!-- Search for Degrees and Programs -->
        <div class="columns small-12 large-5">
          <div class="field-container">
            <label tabindex="0" for="dap-undergraduate-keyword" class="show-for-sr">Search for Degrees and
              Programs</label>
            <input id="dap-undergraduate-keyword" name="dap-undergraduate-keyword" class="input-with-button" type="text"
              placeholder="Search Degrees &amp; Programs">
            <button type="submit">
              <span class="show-for-sr">Search for Degrees and Programs</span>
              {{svg "search"}}
            </button>
          </div>
        </div>

      </div>
    </div>

  </fieldset>
</form>
<!-- end partial:dap-undergraduate-form -->