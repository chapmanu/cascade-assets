<script>
  $(function () {

    /**
     * Clickable Parent Link with sub-menu
     *
     * NB: must be placed BEFORE foundation's plugins initialisation.
     */
    $('.has-submenu > a').each(function () {
      $(this).clone().prependTo($(this).parent('li')).wrap('<span class="parent-lab"></span>');
    });

    /**
     * Initialise Foundation's plugins
     */
    $(document).foundation();
    console.log("ready!");
  });

</script>

