<system-data-structure>
  <group identifier="image" label="Image" multiple="true">
    <text default="Internal Cascade Image" identifier="imageType" label="Image Link" required="true" type="radiobutton">
      <radio-item show-fields="image/imageUrlInt" value="Internal Cascade Image" />
      <radio-item show-fields="image/imageUrlExt" value="External Image URL" />
      <radio-item value="None" />
    </text>
    <text identifier="imageUrlExt" label="External Image URL" />
    <asset identifier="imageUrlInt" label="Internal Cascade Image" type="file" />
    <text identifier="caption" label="Caption" wysiwyg="false" />
    <text help-text="Be succinct, accurate, and equivalent in presenting the same content and function of the image. Do NOT be redundant or provide the same information as text within the context of the image. Do NOT use the phrases &quot;image of ...&quot; or &quot;graphic of ...&quot; to describe the image. https://webaim.org/techniques/alttext/" identifier="altText" label="Alternate Text" required="true" />
    <text default="Image Shape" identifier="imageShape" label="Image Shape" type="radiobutton">
      <radio-item value="Circle" />
      <radio-item value="Square" />
    </text>
  </group>
</system-data-structure>