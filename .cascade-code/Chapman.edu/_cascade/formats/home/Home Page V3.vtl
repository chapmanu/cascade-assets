					<text help-text="full url to image on blog server" identifier="link" label="External Image"/>
					<asset help-text="link to image to be used for story" identifier="internalLink" label="Or Internal Image" type="file"/>
					<text default="story photo" identifier="altText" label="Image Alt Text" required="true"/>
				</group>
			</group>
		</group>
		<group collapsed="true" identifier="primaryButton" label="Primary Button">
			<text identifier="text" label="Button Text"/>
			<text help-text="ID code to pass to tracking software" identifier="trackingID" label="Tracking ID" required="true"/>
			<text identifier="link" label="External Link"/>
			<asset identifier="internalLink" label="Or Internal Link" type="page"/>
		</group>
		<group collapsed="true" identifier="secondaryButton" label="Secondary Button">
