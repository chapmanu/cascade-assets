<system-data-structure>
	<group collapsed="true" identifier="sharing" label="Sharing ">
		<asset help-text="Image used for sharing on facebook (130px w, 110px h exactly)" identifier="og_image" label="OG Image" type="file"/>
		<text help-text="Overrides title for when page is shared to facebook (defaults to Display Name)" identifier="og_title" label="OG Title"/>
		<text help-text="Overrides description when page is shared to facebook" identifier="og_description" label="OG Description"/>
		<text help-text="The text that prepopulates on twitter (followed by URL and hashtags)" identifier="twitter_text" label="Twitter Share Text"/>
		<text help-text="Hastags to get appended to tweet (no #!)" identifier="twitter_hashtag" label="Twitter Hashtag" maximum-number="3" multiple="true"/>
	</group>
	<group collapsed="true" identifier="alert" label="Alert">
		<text default="No" identifier="active" label="Override Rave Feed and show alert?" required="true" type="radiobutton">
			<radio-item value="Yes"/>
			<radio-item value="No"/>
		</text>
		<text default="Alert" identifier="messageType" label="Type of message?" required="true" type="radiobutton">
			<radio-item value="Alert"/>
			<radio-item value="Notice"/>
		</text>
		<text identifier="copy" label="Copy" wysiwyg="true"/>
	</group>
	<group identifier="heroPanel" label="Hero Panel">
		<asset identifier="internalLink" label="Hero Story To Feature" type="page"/>
	</group>
	<group identifier="newsStories" label="News Stores">
		<text default="Alert" identifier="displayNews" label="Display" required="true" type="radiobutton">
			<radio-item value="Yes"/>
			<radio-item value="No"/>
		</text>
	</group>
	<group collapsed="true" identifier="BlogStories" label="Blog Stories">
		<group collapsed="true" identifier="topStory" label="Top Story">
			<text identifier="header" label="Header" required="true"/>
			<text identifier="link" label="Link to Blog Story" required="true"/>
